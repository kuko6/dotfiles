// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    }
  },
  {
    "context": "vim_mode == normal && vim_mode != insert",
    "bindings": {
      "space f": "file_finder::Toggle"
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "shift-u": "vim::Redo"
    }
  },
  {
    "context": "vim_mode == normal && vim_mode != insert",
    "bindings": {
      "space b": [
        "tab_switcher::Toggle",
        {
          "select_last": true
        }
      ]
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-tab": [
        "tab_switcher::Toggle",
        {
          "select_last": true
        }
      ]
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "space =": "editor::FormatSelections"
    }
  },
  {
    "context": "vim_mode == normal && vim_mode != visual",
    "bindings": {
      "space =": "editor::Format"
    }
  },
  {
    "context": "(VimControl || (!Editor && !Terminal))",
    "bindings": {
      "alt-n": "vim::ResizePaneUp"
    }
  },
  {
    "context": "(VimControl || (!Editor && !Terminal))",
    "bindings": {
      "alt-e": "vim::ResizePaneDown"
    }
  },
  {
    "context": "(VimControl || (!Editor && !Terminal))",
    "bindings": {
      "alt-m": "vim::ResizePaneLeft"
    }
  },
  {
    "context": "(VimControl || (!Editor && !Terminal))",
    "bindings": {
      "alt-i": "vim::ResizePaneRight"
    }
  },
  {
    "context": "vim_mode == normal && vim_mode != insert",
    "bindings": {
      "space h r": "editor::RevertSelectedHunks"
    }
  },
  {
    "context": "vim_mode == normal && vim_mode != insert",
    "bindings": {
      "space h p": "editor::ToggleSelectedDiffHunks"
    }
  },
  {
    "context": "vim_mode == normal && vim_mode != insert",
    "bindings": {
      "space h s": "git::ToggleStaged"
    }
  },
  {
    "context": "vim_mode == normal && vim_mode != insert",
    "bindings": {
      "space h r": "git::Restore"
    }
  }
]